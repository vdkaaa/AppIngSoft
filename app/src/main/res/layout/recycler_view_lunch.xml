<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:card_view="http://schemas.android.com/tools"
android:id="@+id/CardViewLunches"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="12dp"
app:cardBackgroundColor="@color/white"
app:cardCornerRadius="20dp"
app:cardElevation="6dp"
app:contentPadding="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rv_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">


        <ImageView
            android:id="@+id/CV_imageLunch"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/cv_headerLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/CV_imageLunch"
            android:text="Alooooo"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/CV_imageLunch"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cv_descriptionLunch"
            android:layout_width="194dp"
            android:layout_height="69dp"
            android:layout_below="@+id/cv_headerLunch"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:layout_toEndOf="@id/CV_imageLunch"
            android:text="wenas"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/CV_imageLunch"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cv_priceLunch"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_descriptionLunch"
            android:layout_marginStart="20dp"
            android:layout_marginTop="104dp"
            android:layout_toEndOf="@id/CV_imageLunch"
            android:text="Wenaas"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/CV_imageLunch"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/isSelectedTick"
            android:layout_width="39dp"
            android:layout_height="33dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/check_mark" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>



